@using MVC_Start.Models.ViewModels
@model UpdateViewModel

@{
    string photoPath = "/images/" + (Model.ExistingPhotoPath ?? "test.jpg");
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Editor" method="post" class="mt-3">
    <input hidden asp-for="Id"/>
    <input hidden asp-for="ExistingPhotoPath"/>
    
    <div class="form-group row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>  
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name"/>
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>  
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Major" class="col-sm-2 col-form-label"></label>  
        <div class="col-sm-10">
            <select asp-for="Major" asp-items="Html.GetEnumSelectList(typeof(MajorEnum))" class="form-select">
                  <option value="">请选择</option>
            </select>
            <span asp-validation-for="Major" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group row mb-3">
        <label for="file" asp-for="Photo" class="col-sm-2 col-form-label"></label>  
        <div class="col-sm-10">
            <input asp-for="Photo"  class="form-control" type="file" multiple="true"/> @*多文件只需要在type后面使用taghelper multiple="true"*@
            <span asp-validation-for="Photo"></span>
        </div>
    </div>
    <img src="@photoPath" style="width:100px;height:auto"  asp-append-version="true"/>
   
    <button type="submit" class="btn btn-primary m-1">创建</button>
    
</form>