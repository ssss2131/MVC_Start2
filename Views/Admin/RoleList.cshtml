@model IEnumerable<IdentityRole>
@{
    ViewBag.title = "角色列表";
}
<h1>@ViewBag.title</h1>
@if(Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Admin">添加角色</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">角色Id:@role.Id</div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">                 
                <form method="post" asp-action="DelRole" asp-controller="Admin" asp-route-id="@role.Id">
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id">编辑</a>
                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                        <span>你确认要删除吗?</span>
                        <button type="submit" class="btn btn-danger">是</button>
                        <a  class="btn btn-primary" onclick="confirmDelete('@role.Id',false)">否</a>
                    </span>
                    <span id = "deleteSpan_@role.Id">
                        <a class="btn btn-danger" onclick=confirmDelete('@role.Id',true)>删除</a>                 
                    </span>                              
                </form>


            </div>
        </div>
    }
}
else{
       <div class="card mb-3">
            <div class="card-header">尚未创建任何角色</div>
            <div class="card-body">
                <h5 class="card-title">点击下面按钮创建角色</h5>
                <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">创建角色</a>
            </div>
            
        </div>
}
@section Scripts{
    <script src="~/js/Customer.js"></script>
}